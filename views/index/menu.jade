.col-md-2
    .panel.panel-primary
        .panel-heading
            .row
                .col-md-7
                    .h1.panel-title Programs
                .col-md-5.text-right
                    button.btn.btn-default.btn-xs(
                        data-bind="click: addProgramModal"
                        data-toggle="modal",
                        data-target="#add-program"
                    )
                        span.glyphicon.glyphicon-plus
                        | Add
        .panel-body
            .list-group(data-bind='foreach: programs')
                a.list-group-item(
                    href="#",
                    data-bind='attr: { id: "program" + id() }, ' +
                               'text: name, ' +
                               'click: $root.loadProgram, ' +
                               'css: {active: $root.loadedProgram.id == id}')
    .panel.panel-primary
        .panel-heading
            h3.panel-title Sensors
        .panel-body
            .list-group(data-bind='foreach: availableSensors')
                a.list-group-item(
                    href="#",
                    data-bind='attr: { id: "sensor" + id() }, ' +
                              'click: $root.createSensorInstance, ' +
                              'text: name')
    .panel.panel-primary
        .panel-heading
            .row
                .col-md-7
                    .h1.panel-title Helpers
                .col-md-5.text-right
                    button.btn.btn-default.btn-xs(
                    data-bind="click: $root.addHelperModal"
                    data-toggle="modal",
                    data-target="#add-helper",
                    data-backdrop="static"
                    )
                        span.glyphicon.glyphicon-plus
                        | Add
        .panel-body
            .list-group(data-bind='foreach: helpers')
                a.list-group-item(
                    href="#",
                    data-bind='attr: { id: "helper" + id() }, ' +
                               'text: name, ' +
                               'click: $root.editHelperModal'
                    data-toggle="modal",
                    data-target="#add-helper",
                    data-backdrop="static")